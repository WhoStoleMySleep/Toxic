doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='apple-touch-icon' sizes='76x76' href='/apple-touch-icon.webp')
    link(rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.webp')
    link(rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.webp')
    link(rel='manifest' href='/site.webmanifest')
    link(rel='mask-icon' href='/safari-pinned-tab.svg' color='#5bbad5')
    meta(name='apple-mobile-web-app-title' content='Toxic')
    meta(name='application-name' content='Toxic')
    meta(name='msapplication-TileColor' content='#00a300')
    meta(name='theme-color' content='#ffffff')
    title Toxic
  body.room-details
    include ./components/header/header.pug
    main.room-details__main
      .room-details__container-images
        img.room-details__image.room-details__image_type_big(src='./img/bg-cards-one.webp', alt='')
        img.room-details__image.room-details__image_type_small_one(src='./img/bg-cards-two.webp', alt='')
        img.room-details__image.room-details__image_type_small_two(src='./img/bg-cards-three.webp', alt='')
      .room-details__row
        .room-details__col.room-details__col_col_one
          .room-details__general-information
            .room-details__information
              h2.room-details__information-headed Сведения о номере
              include ./components/text-list/text-list.pug
              - 
                const textList = [
                  {
                    ico: 'insert_emoticon',
                    headed: 'Комфорт',
                    additionally: 'Шумопоглощающие стены'
                  },
                  {
                    ico: 'location_city',
                    headed: 'Удобство',
                    additionally: 'Окно в каждой из спален'
                  },
                  {
                    ico: 'whatshot',
                    headed: 'Уют',
                    additionally: 'Номер оснащён камином'
                  }
                ]
              +text-list(textList)
            .room-details__assessments
              h2.room-details__assessment-headed Впечатления от номера
              .room-details__bagel
                .room-details__votes
                  h1.room-details__votes-headed 260
                  p.room-details__votes-context голосов
                .room-details__bagel-container
                  .room-details__bagel-canvas.js-room-details__bagel-canvas
                    svg(viewbox="0 0 0 0" style="height:0; width: 0;")
                      defs
                        linearGradient#satisfactorily-gradient(x2="0%" y2="100%" gradientTransform="rotate(180deg)")
                          stop(offset="0%" stop-color="#BC9CFF")
                          stop(offset="100%" stop-color="#8BA4F9")
                        linearGradient#good-gradient(x2="0%" y2="100%" gradientTransform="rotate(180deg)")
                          stop(offset="0%" stop-color="#6FCF97")
                          stop(offset="100%" stop-color="#66D2EA")
                        linearGradient#fabulous-gradient(x2="0%" y2="100%" gradientTransform="rotate(180deg)")
                          stop(offset="0%" stop-color="#FFE39C")
                          stop(offset="100%" stop-color="#FFBA9C")
                        linearGradient#disappointment-gradient(x2="0%" y2="100%" gradientTransform="rotate(180deg)")
                          stop(offset="0%" stop-color="#919191")
                          stop(offset="100%" stop-color="#3D4975")
                ul.room-details__bagel-legend.js-room-details__bagel-legend 
                  li.room-details__bagel-legend-element Великолепно
                  li.room-details__bagel-legend-element Хорошо
                  li.room-details__bagel-legend-element Удовлетворительно
                  li.room-details__bagel-legend-element Разочарован
          .room-details__comment-block
            .room-details__comment-block-headed-container
              h2.room-details__comment-block-headed Отзывы посетителей номера
              p.room-details__comment-block-context 2 отзыва
            include ./components/comments/comments.pug
            - 
              const users = [
                {
                  faceImg: 'face.webp',
                  likes: '11',
                  name: 'Мурад Сарафанов',
                  daysAgo: '5 дней назад',
                  comment: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
                },
                {
                  faceImg: 'face2.webp',
                  likes: '2',
                  name: 'Патрисия Стёклышкова',
                  daysAgo: 'Неделю назад',
                  comment: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент.'
                }
              ]
            +comments(users)
          .room-details__more-about
            .room-details__rules
              h2.room-details__rules-headed Правила
              include ./components/bullet-list/bullet-list.pug
              - 
                const bulletList = [
                  'Нельзя с питомцами',
                  'Без вечеринок и мероприятий',
                  'Время прибытия — после 13:00, а выезд до 12:00'
                ]
              +bullet-list(bulletList)
            .room-details__cancellation
              h2.room-details__cancellation-headed Отмена
              p.room-details__cancellation-context Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
        .room-details__col.room-details__col_col_two
          include ./components/to-book/to-book.pug
    include ./components/footer/footer.pug