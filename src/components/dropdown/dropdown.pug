mixin dropdown(name, person, elems = [])
  .dropdown
    label.dropdown-selection-label
      input(data-default="" + name, data-person="" + person, readonly).dropdown-selection
    .dropdown-menu
      each elem in elems
        .dropdown-menu-option
            div 
              p.dropdown-item= elem

